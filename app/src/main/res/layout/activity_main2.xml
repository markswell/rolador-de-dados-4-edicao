<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:background="@drawable/castelo_mal_assombrado"
    android:orientation="vertical">

    <TextView
        android:id="@+id/texto_dificuldade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50sp"
        android:fontFamily="monospace"
        android:shadowColor="@drawable/sombra_texto"
        android:text="Dificuldade 6:"
        android:textColor="@drawable/dado_texto"
        android:textSize="20sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="180sp"
        android:layout_height="30sp"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="50sp"
        android:layout_row="0"
        android:max="10"
        android:progress="6"
        android:progressDrawable="@drawable/dado_texto"
        android:thumb="@drawable/thumb" />

    <TextView
        android:id="@+id/texto_dado"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_marginLeft="20sp"
        android:background="@drawable/dado"
        android:gravity="center_vertical|center_horizontal"
        android:text="0"
        android:textColor="@drawable/dado_texto"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="180sp"
        android:layout_height="150sp"
        android:orientation="vertical"
        android:layout_row="1"
        android:layout_column="1">

        <ImageButton
            android:id="@+id/bnt_mais"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="#00000000"
            android:src="@drawable/mais" />
        <ImageButton
            android:id="@+id/btn_menos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="#00000000"
            android:src="@drawable/menos" />
    </LinearLayout>

    <Spinner
        android:id="@+id/spinner"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />

</GridLayout>